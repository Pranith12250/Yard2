<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BinStatus">
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/binnoTextInputLayout"
      android:layout_width="329dp"
      android:layout_height="72dp"
      android:layout_margin="4dp"
      android:hint="Enter Bin Number"
      android:textColorHint="#3f001c"
      app:boxBackgroundMode="none"
      app:endIconMode="clear_text"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.059">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/binnoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="#ffe1e7"
        android:inputType="text"
        android:maxLines="1" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/go2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/rounded_edittext_background"
      android:text="Go"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.212" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/binotext"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Bin no"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="25sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/binno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="25sp" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bindesctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Bin \nDescription"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="25sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/bindesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="25sp" />

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/binloctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Bin \nLocation"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="25sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/binloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="25sp" />
  </LinearLayout>
  </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>